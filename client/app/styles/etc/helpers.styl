.wrapper
  overflow hidden

  &__content
    background #D5D5D5
    min-height 100vh
    position relative
    z-index 2
    height 100%
    transition transform 0.3s linear;
    margin-left 120px
    background linear-gradient(to top, rgba($bg-dark, .4), rgba($bg-dark, .5)), url(img/bg-b.jpg)
    background-position center
    background-size cover
    background-repeat no-repeat

    &:before
      position absolute
      content ''
      display block
      width 2px
      height 100%
      right 100%
      top 0
      background linear-gradient(to left, rgba($bg-dark,.2), rgba(#fff,.0))

.wrapper
  height 100%
  min-height 100vh

  &._no-auth
    .i-logo
      left: 0
    .wrapper__content
      margin-left: 0

.container
  padding 0 15px

@media $max767
  .wrapper
    overflow hidden

    &__content
      width 100%
      margin-left 0
      background-image linear-gradient(to top, rgba($bg-dark, .35), rgba($bg-dark, .5)), url(img/bg-s.jpg)

      .open &
        transform translateX(80px);
